{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": [
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "_responses": ["./src/responses"],
      "_logger": ["./src/logger"],
      "_firebase": ["./src/firebase"],
      "_models": ["./src/models"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "include": [
    "src"
  ],
}